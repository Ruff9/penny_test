<div class='main-wrapper'>
  <h1 class='page-title'>Find your recipe</h1>

  <div class='main-container'>
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe), class: 'recipe-link' do %>
        <h2><%= recipe.title %></h2>
      <% end %>
    <% end %>

    <%== pagy_nav(@pagy) %>
  </div>
</div>

